<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigationGraphBookmark"
    app:startDestination="@id/articleListFragment">

    <fragment
        android:id="@+id/articleListFragment"
        android:name="com.aqube.mvi.ui.articlelist.ArticleListFragment"
        android:label="@string/fragment_article_list_title_label"
        tools:layout="@layout/fragment_article_list">
        <action
            android:id="@+id/action_articleListFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="com.aqube.mvi.ui.articledetail.ArticleDetailFragment"
        android:label="@string/fragment_article_detail_title_label"
        tools:layout="@layout/fragment_article_detail" />
</navigation>